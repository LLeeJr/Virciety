# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Map {
  key: String!,
  value: String!,
}

type Notif {
  id: String!
  event: String!
  read: Boolean!
  receiver: String!
  text: String!
  params: [Map!]!
  route: String!
}

type Mutation {
  setReadStatus(id: String!, status: Boolean!): Notif!
}

type Query {
  getNotifsByReceiver(receiver: String!): [Notif!]!
}

type Subscription {
  notifAdded(userName: String!): Notif!
}
