# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Notif {
  id: String!
  receiver: String!
  text: String!
  event: String!
}

type Query {
  getNotifsByReceiver(receiver: String!): [Notif!]!
}

input CreateNotifRequest {
  receiver: String!
  text: String!
  event: String!
}

type Mutation {
  createNotif(input: CreateNotifRequest!): Notif!
}

type Subscription {
  notifAdded: Notif!
}