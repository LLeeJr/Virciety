# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Query {
  getDms: [Dm!]!
  getChat(input: GetChatRequest!): [Dm!]!
  getOpenChats(userName: String!): [Chat!]!
}

type Dm {
  id: String!
  msg: String!
}

type Subscription {
  dmAdded: Dm!
}

type Chat {
  withUser: String!
  preview: String!
}

type Mutation {
  createDm(input: CreateDmRequest): Dm!
}


input CreateDmRequest {
  id: String!
  msg: String!
}

input GetChatRequest {
  user1: String!
  user2: String!
}