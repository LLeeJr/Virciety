FROM node:15-alpine as builder

COPY package.json ./

COPY package-lock.json ./

RUN npm install

RUN mkdir /notification

WORKDIR /notification

COPY . .

RUN node_modules/.bin/ng build --prod --project=notification

FROM nginx
COPY nginx/default.conf /etc/nginx/conf.d/default.conf
COPY --from=builder /notification/dist/notification /usr/share/nginx/html

CMD ["nginx", "-g", "daemon off;"]
