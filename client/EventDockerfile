FROM node:15-alpine as builder

COPY package.json ./

COPY package-lock.json ./

RUN npm install

RUN mkdir /event

WORKDIR /event

COPY . .

RUN node_modules/.bin/ng build --prod --project=event

FROM nginx
COPY nginx/default.conf /etc/nginx/conf.d/default.conf
COPY --from=builder /event/dist/event /usr/share/nginx/html

CMD ["nginx", "-g", "daemon off;"]
