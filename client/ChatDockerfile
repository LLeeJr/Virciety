FROM node:15-alpine as builder

COPY package.json ./

COPY package-lock.json ./

RUN npm install

RUN mkdir /chat

WORKDIR /chat

COPY . .

RUN node_modules/.bin/ng build --prod --project=chat

FROM nginx
COPY nginx/default.conf /etc/nginx/conf.d/default.conf
COPY --from=builder /chat/dist/chat /usr/share/nginx/html

CMD ["nginx", "-g", "daemon off;"]
