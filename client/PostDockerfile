FROM node:15-alpine as builder

COPY package.json ./

COPY package-lock.json ./

RUN npm install

RUN mkdir /post

WORKDIR /post

COPY . .

RUN node_modules/.bin/ng build --prod --project=post

FROM nginx
COPY nginx/default.conf /etc/nginx/conf.d/default.conf
COPY --from=builder /post/dist/post /usr/share/nginx/html

CMD ["nginx", "-g", "daemon off;"]
