FROM node:15-alpine as builder

COPY package.json ./

COPY package-lock.json ./

RUN npm install

RUN mkdir /user

WORKDIR /user

COPY . .

RUN node_modules/.bin/ng build --prod --project=user

FROM nginx
COPY nginx/default.conf /etc/nginx/conf.d/default.conf
COPY --from=builder /user/dist/user /usr/share/nginx/html

CMD ["nginx", "-g", "daemon off;"]
