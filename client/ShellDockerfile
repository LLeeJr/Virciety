FROM node:15-alpine as builder

COPY package.json ./

COPY package-lock.json ./

RUN npm install

RUN mkdir /client

WORKDIR /client

COPY . .

RUN node_modules/.bin/ng build --prod --project=shell

FROM nginx
COPY nginx/default.conf /etc/nginx/conf.d/default.conf
COPY --from=builder /client/dist/shell /usr/share/nginx/html

CMD ["nginx", "-g", "daemon off;"]
